{
    "name": "freeze/serializer-component",
    "description": "Serializer Component for Freeze Framework",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Freezemage",
            "email": "freezemage0@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "ext-yaml": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Freeze\\Component\\Serializer\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Freeze\\Component\\Serializer\\Test\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit"
    }
}
